<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_mlarge">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/spacing_xmedium"
            android:textColor="@color/colorPrimaryDarkAbasur"
            android:textSize="@dimen/special_size_baz_3"
            android:textStyle="bold|italic"
            tools:text="@string/dummy_nombre" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>